diagram(course)

stack {
page "Raw Data" 
	grid
	  columns for a : course.assignments {
	    text a.name
	    text a.points
	    text a.maximum
	  }
	  rows for s : course.students {
	    text s.number
	    text s.name
	    text s.id
	  }    
	  body for g : course.grades {
  		text g.grade
	  }

page "Normalized"
	grid
	  columns for a : course.assignments {
	    text a.category.name
	    text a.name
	  }
	  rows for s : course.students {
	    text s.number
	    text s.name
	    text s.id
	  }    
	  body for g : course.grades {
		  text g.normal
	  }
	  columns for a : course.assignment {
	    label "Before Curve" {
			  text a.averageN
			  text a.stdevN
			  text a.medianN
			  text a.maxGradeN
			  text a.minGradeN
			}
  		text a.curve
	    text a.target
	    label "After Curve" {
			  text a.averageC
			  text a.stdevC
			  text a.medianC
			  text a.maxGradeC
			  text a.minGradeC
			}
	}
page "Curved"
	grid
	  columns for a : course.assignments {
	    text a.category.name
	    text a.name
	  }
	  rows for s : course.students {
	    text s.number
	    text s.name
	    text s.id
	  }    
	  body for g : course.grades {
  		text g.curved
	  }
}