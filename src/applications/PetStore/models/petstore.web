def radio_group(radios: radio(value, label[])) {
  let
    x = gensym 
  in {
    for (r: radios, i) {
      let
        id = gensym
      in {
        <label \for=id>r->label();</label>
        if (i == 0) {
          <input type="radio" id=id name=x value=value selected="true"/>
        }
        else {
          <input type="radio" id=id name=x value=value/>
        }
      }
    }
  }
}
